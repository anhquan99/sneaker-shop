@{
Layout = "~/Pages/Shared/_Layout.cshtml";
}  
@model ProductListViewModel
<div class="ShopAllGrid_Container">
    <div class="InfiniteScrollSearchGrid_HeadingWrapper">
        @if (!String.IsNullOrEmpty(Model.Icon))
        {
            <div class="BrandLogo_LogoContainer" style="background-image: url('/utility/@Model.Icon');height: 13vh; width: 100%; margin: 16px 0px;"></div>
        }
        <h1 class="Heading-sc">@Model.Title</h1>
        <p class="InfiniteScrollSearchGrid_BrandDescription">@Model.Description</p>
    </div>
    <div class="SneakerApparelToggle_Container">
        <a href="#" class="SneakerApparelToggle__Option">Sneaker</a>
        <a href="#" class="SneakerApparelToggle__Option">Apparel</a>
    </div>
    <div class="ShopAllGrid_GridAndFiltersContainer">
        <div class="ShopAllGrid_Observer"></div>
        <div class="ShopAllGrid_Filters"></div>
        <div class="FilterSummaryRow_Wrapper">
        <div class="FilterSummaryRow_NumOfResults">
                @if(Model.NumberOfRecords > 10000)
                {
                    <h1 class="SearchResultCountText_HitsText">Showing 10000+ results</h1>
                }
                else
                {
                    <h1 class="SearchResultCountText_HitsText">Showing @Model.NumberOfRecords results</h1>
                }
        </div>
        <div class="FilterSummaryRow_StyledSortBy">
            <div class="DropdownMenu_Dropdown"><button onclick="openSelection('SortListSelection')" class="DropdownMenu_DropdownButton">
                <div class="DropdownMenu_Title">Sort By</div>
                <div class="DropdownMenu_Title DropdownMenu_Selection">
                    Popular</div>
                <div class="DropdownMenu_ArrowWrapper"><svg data-name="Layer 1" xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 8.33 5" width="10px" height="10px" class="arrow pointer " style="transform: rotate(-180deg);">
                    <polyline points="1.17 4.25 4.17 1.25 7.17 4.25" fill="none" stroke="#0b0b0b" stroke-miterlimit="10"
                        stroke-width="1.5"></polyline>
                    </svg></div>
                </button>
                <ul class="DropdownMenu_DropdownList DropdownMenu_Scroll goat-scroll" id="SortListSelection">
                <li class="DropdownMenu_DropdownListItem"><button class="DropdownMenu_DropdownListItemButton">
                    <div class="DropdownMenu_Title DropdownMenu_DropdownListItemButtonLabel DropdownMenu_DropdownListItemButton_Selected" >popular</div>
                    <div class="DropdownMenu_DropdownListItemButtonIcon"><svg width="14" height="14" viewBox="0 0 10 8"
                        fill="none" xmlns="http://www.w3.org/2000/svg">
                        <line x1="1.06066" y1="3.91664" x2="3.33333" y2="6.18931" stroke="black" stroke-width="1.5"
                            stroke-linecap="round"></line>
                        <line x1="3.3335" y1="6.18934" x2="8.27284" y2="1.25" stroke="black" stroke-width="1.5"
                            stroke-linecap="round"></line>
                        </svg></div>
                    </button></li>
                <li class="DropdownMenu_DropdownListItem"><button class="DropdownMenu_DropdownListItemButton">
                    <div class="DropdownMenu_Title DropdownMenu_DropdownListItemButtonLabel">new</div>
                    </button></li>
                <li class="DropdownMenu_DropdownListItem"><button class="DropdownMenu_DropdownListItemButton">
                    <div class="DropdownMenu_Title DropdownMenu_DropdownListItemButtonLabel">upcoming</div>
                    </button></li>
                <li class="DropdownMenu_DropdownListItem"><button class="DropdownMenu_DropdownListItemButton">
                    <div class="DropdownMenu_Title DropdownMenu_DropdownListItemButtonLabel">price
                        (low-high)</div>
                    </button></li>
                <li class="DropdownMenu_DropdownListItem"><button class="DropdownMenu_DropdownListItemButton">
                    <div class="DropdownMenu_Title DropdownMenu_DropdownListItemButtonLabel">price
                        (high-low)</div>
                    </button></li>
                </ul>
            </div>
        </div>
        </div>
        <div class="ShopAllGrid_InfiniteHitsWrapper">
            <div class="InfiniteHits_Wrapper">
                <ul class="InfiniteHits_List">
                    <div class="Grid_Wrapper">
                                                @foreach(var i in Model.ProductList)
                        {
                            @await Component.InvokeAsync("ProductCard", new{data = i});
                        }
                    </div>
                </ul>
            </div>
        </div>
    </div>
</div>
