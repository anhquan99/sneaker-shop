@page
@model LoginModel

@{
    ViewData["Title"] = "Log in vs login";
}

    <div class="PageLayout_PageAligment" onload="getLoginForm('LoginForm','RegisterForm')">
        <div class="Hero_Wrapper LoginView_Hero">
            <div class="Hero_FirstPane">
                <div class="Hero_HeroPane">
                    <div class="Hero_HeroPaneContent LoginView_HeroPaneContent"><img alt="Red Jordan 1s" src="~/images/login.jpg"
                            class="LoginView_Jordans"></div>
                </div>
            </div>
            <div class="Hero_SecondPane">
                <form class="LoginForm" id="LoginForm" method="post" asp-route-returnUrl="@Model.ReturnUrl">
                    <div class="Hero_HeroPane LoginForm_HeroPane">
                        <div class="Hero_HeroPaneContent LoginForm_HeroPaneContent">
                            <header class="LoginForm_Header">
                                <h1 class="LoginForm_Title">Log In</h1>
                                <p class="LoginForm_Subtitle">You need to be logged in
                                    to continue.</p><a onclick="showFormWithAnimation('LoginForm','RegisterForm')" class="LoginForm_CreateAccountButton"
                                    asp-area="Identity" asp-page="/Account/Register">Sign Up</a>
                            </header>
                            <main class="LoginForm_Main">
                                <div class="MaterialInput_Content">
                                    <label class="MaterialInput_Label">
                                        <input id="email" asp-for="Input.Email"
                                            label="Email" name="email" type="email" autocomplete=""
                                            aria-label="Email" class="MaterialInput_Input" value="" onchange="fillForm()">
                                            <span class="MaterialInput_LabelCopy">Email</span>
                                    </label>
                                </div>
                                <div class="LoginForm_InputWrapper">
                                    <div class="MaterialInput_Content">
                                        <label class="MaterialInput_Label">
                                            <input id="password" asp-for="Input.Password"
                                                label="Password" name="password" type="password" autocomplete=""
                                                aria-label="Password" class="MaterialInput_Input" value="" onchange="fillForm()">
                                                <span class="MaterialInput_LabelCopy" >Password</span>
                                            </label>
                                            </div>
                                            @*<button type="button" class="LoginForm_ForgotPasswordButton"><span>Forgot</span></button>*@
                                </div>
                            </main>
                        </div>
                        <div class="LoginForm_Error">
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </div>
                        <div class="LoginForm_Error"></div>
                        <nav class="Hero_HeroPaneLoginActions"><span class="Hero_Border">
                            <button disabled="" type="submit" id="submitBtn"
                                    class="GoatButton_Wrapper Hero_Button">Log
                                    In</button>
                                </span>
                                </nav>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script>
        function fillForm(){
            var username = document.getElementById("email");
            var password = document.getElementById("password");
            var submitBtn = document.getElementById("submitBtn");
            if(username.value.length != 0 && password.value.length != 0){
                submitBtn.disabled = false;
            }
            else{
                submitBtn.disabled = true;
            }
        }
    </script>
